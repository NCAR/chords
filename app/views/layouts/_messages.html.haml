.row
  - admin_user = User.find_by(email: 'admin@chordsrt.com')
  - if current_user && current_user.role?(:admin) && admin_user.try(:valid_password?, 'realtimedata')
    %div{:class => "flash_alert"}
      Admin Password Set To Default...
      %strong
        %u
          = link_to "PLEASE CHANGE IMMEDIATELY!!!", "/users/edit.#{admin_user.id}"


  - if current_user && current_user.role?(:admin) && (@profile.registration_email_sent == false)
    %div{:class => "flash_alert"}
      This portal has not been registered yet. Once your configuration is complete,
      %strong
        %u
          = link_to "let the CHORDS team know! ", register_profiles_path


  - if current_user && current_user.role?(:admin) && User.with_only_role(:guest).count > 0
    = content_tag :div, "New users exist who need their permissions to be updated!\nPlease upgrade those users to at least Registered Users or remove them to avoid seeing this message again.", class: "flash_notice"


.row
  - flash.each do |name, msg|
    - if msg.is_a?(String)
      = content_tag :div, msg.html_safe, :class => "flash_#{name}"
