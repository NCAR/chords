%h1 Archive Configuration
%br
= form_for(:archive, method: "post", multipart: true, html: {class: "new_or_edit_form" }) do |f|
  %div
    .line
      .title
        Archive Name
      .field
        = f.select :name, Archive.name_options

    .line
      .title
        How often should data be pushed to the archive?
      .field
        = f.select :send_frequency, Archive.send_frequency_options

    .line
      .title
        Data most recently sent to archive at
      .field
        #{@archive.last_archived_at}

    .line
      %br
      = f.submit value: 'Save Config', class: 'btn btn-primary btn-md'


.clear
- if @archive.enabled == false
  = button_to 'Enable Archiving', {:controller => 'archives', :action => 'enable_archiving'}, {:class => 'btn btn-primary btn-md', :method => 'post'}
- else
  = button_to 'Disable Archiving', {:controller => 'archives', :action => 'disable_archiving'}, {:class => 'btn btn-primary btn-md', :method => 'post'}


%br
%h1 Archive Credentials
%br
%div.row
  %div.col-lg-10.col-md-11
    = form_for(:archive, method: "post", :url => { :action => :update_credentials }, multipart: true, html: {class: "new_or_edit_form" }) do |f|
      .configuration
        .line
          .title
            Base URL of Archive
          .field
            = f.text_field 'base_url', size: 60, class: 'form-control'

        .line
          .title
            Archive Username
          .field
            = f.text_field 'username', size: 60, class: 'form-control'

        .line
          .title
            Archive Password
          .field
            = f.text_field 'password', size: 60, class: 'form-control'

        .line
          = f.submit value: 'Save Credentials', class: 'btn btn-primary btn-md'

- if Archive.first.name == "CUAHSI"
  %br
  %h1 Archive Status
  %br
  %div
    .line
      .title
        %u
          Resource type
      .title
        %u
          Status
      .title
        %u
          Unconfigured resources
      .title

    .line
      .title
        Source
      .title
        - sources = unconfigured_sources
        #{num_configured_sources} configured / #{sources.length} unconfigured
      .title
        - if sources.empty?
          None
        - else
          - sources.each do |p|
            = p.project
            %br
      .title
        = button_to 'Configure Sources', push_cuahsi_sources_path, {:class => 'btn btn-default'}

    .line
    .line
      .title
        Sites
      .title
        - sites = ArchiveHelper::unconfigured_sites
        #{num_configured_sites} configured / #{sites.length} unconfigured
      .title
        - if sites.empty?
          None
        - else
          -  sites.each do |s|
            = s.name
            %br
      .title
        = button_to 'Configure Sites', push_cuahsi_sites_path, {:class => 'btn btn-default'}

    .line
    .line
      .title
        Instruments (Methods)
      .title
        - methods = unconfigured_methods
        #{num_configured_methods} configured / #{methods.length} unconfigured
      .title
        - if methods.empty?
          None
        - else
          -  methods.each do |m|
            = m.name
            %br
      .title
        = button_to 'Configure Instruments', push_cuahsi_methods_path, {:class => 'btn btn-default'}

    .line
    .line
      .title
        Variables
      .title
        - vars = unconfigured_vars
        #{num_configured_vars} configured / #{vars.length} unconfigured
      .title
        - if vars.empty?
          None
        - else
          -  vars.each do |v|
            = v.name
            %br
      .title
        = button_to 'Configure Variables', push_cuahsi_variables_path, {:class => 'btn btn-default'}

  .clear

%br
%h1 Archive Jobs
%div
  .line
    .title
      = link_to "Show Scheduled Archive Jobs", :archive_jobs
