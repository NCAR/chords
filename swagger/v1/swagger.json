{
  "swagger": "2.0",
  "info": {
    "title": "API V1",
    "version": "v1"
  },
  "paths": {
    "/api/v1/sites": {
      "get": {
        "summary": "List sites",
        "tags": [
          "Sites"
        ],
        "consumes": [
          "application/json",
          "application/xml"
        ],
        "responses": {
          "200": {
            "description": "sites found"
          }
        }
      }
    },
    "/api/v1/sites/{id}": {
      "get": {
        "summary": "Retrieve a site",
        "tags": [
          "Sites"
        ],
        "produces": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "site found",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                }
              },
              "required": [
                "id"
              ]
            }
          },
          "404": {
            "description": "site not found"
          },
          "403": {
            "description": "unsupported accept header"
          }
        }
      }
    }
  }
